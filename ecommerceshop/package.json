{
  "name": "ecommerceshop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite --host 0.0.0.0 --port 5173",
    "build": "tsc -b && vite build",
    "build:backend": "npm run build && node -e \"const fs = require('fs'); const path = require('path'); if (fs.existsSync('dist')) { fs.rmSync('./backend/dist', {recursive: true, force: true}); fs.cpSync('dist', './backend/dist', {recursive: true}); console.log('âœ… Frontend build copied to backend/dist'); }\"",
    "lint": "eslint .",
    "preview": "vite preview",
    "backend:install": "cd backend && npm install",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "backend:prod": "cd backend && npm run start:prod",
    "dev:full": "concurrently \"npm run backend:dev\" \"npm run dev\"",
    "install:all": "npm install && npm run backend:install"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
